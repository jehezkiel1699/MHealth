@model MHealth.Models.Domain.View.MRIViewModel;
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["error"] != "1")
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <h5>Staff: @Model.StaffName</h5>
                    <p>Booking Date: @Model.BookingTime</p>
                </div>
            </div>
            @if (Model.Status == 1)
            {
                <div class="row">
                    <div class="col-md-12">
                        <p>Your Result has been sent to you by email. Please check your email</p>
                    </div>
                </div>
                <form asp-controller="Booking" asp-action="Rating" method="post">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="hidden" name="bookingId" value="@Model.BookingId" />
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <input type="hidden" name="staffId" value="@Model.StaffId" />

                            <div id="rating" class="form-group">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <a class="star" style="text-decoration:none; color:black" data-rating="@i">&#9733;</a>
                                }
                            </div>

                            <input type="hidden" name="rating" id="rating-value" value="" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">Submit Rating</button>
                            <a class="btn btn-success" asp-controller="Booking" asp-action="Index">Back</a>
                        </div>
                    </div>
                </form>
            }

                
        
        </div>
    </div>
}
else
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <p>The staff has not given your result!</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success" asp-controller="Booking" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
}

