@model MHealth.Models.DTO.BookingModel;
@{
    ViewData["Title"] = "Booking";
}

<h5>@ViewData["Title"]</h5>
@*<p>@TempData["bookingId"]</p>
<p>@TempData["userId"]</p>
<p>@TempData["staffId"]</p>*@
<div class="row mt-3">
    <div class="col-md-8 col-lg-6">
        <form asp-action="CreateBooking" asp-controller="Booking" method="post" asp-route-id="@Model.StaffId">
            <div class="form-group">
                <label asp-for="BookingTime">Booking Date: </label>
                <input type="text" id="selectedDate" name="selectedDate" readonly="readonly" />
                <span asp-validation-for="BookingTime" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Book</button>
            <a asp-action="Staff" asp-controller="Home" class="btn btn-success ml-3 mt-3">Back</a>
        </form>
    </div>
</div>

