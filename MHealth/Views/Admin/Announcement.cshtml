@using MHealth.Models.Domain.View;
@model BulkEmailViewModel;
@{
    ViewData["Title"] = "Announcement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h5 class="mt-3">@ViewData["Title"]</h5>

@if(TempData["error"] != "1")
{
<div class="row mt-3">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Announce" asp-controller="Admin" method="post">
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Subject:</label>
                <input type="text" asp-for="Subject" class="form-control"></input>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement" class="control-label">Announcement:</label>
                <textarea asp-for="Announcement" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Announcement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SelectedUserIds" class="control-label">Select Users:</label>

                    <select name="SelectedUserIds" class="form-control" multiple>
                        @foreach (var user in ViewBag.Users)
                        {
                            <option value="@user.Id">@user.UserName</option>
                        }
                    </select>
                <span asp-validation-for="SelectedUserIds" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Post</button>
        </form>
    </div>
</div>
}