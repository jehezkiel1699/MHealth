@model MHealth.Models.DTO.MRIPostModel;

@{
    ViewData["Title"] = "Post MRI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5 class="mt-3">Patient:  @ViewBag.UserName</h5>

<div class="row mt-3">
    <div class="col-md-8 col-lg-6">
        <form enctype="multipart/form-data" asp-action="Post" asp-controller="Staff" method="post">
            <input type="hidden" name="bookingId" value="@Model.BookingId" />
            <input type="hidden" name="userId" value="@Model.UserId" />
            <input type="hidden" name="staffId" value="@Model.StaffId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="4" name="description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostPath">Image:</label>
                <input type="file" asp-for="PostPath" class="form-control-file" accept="image/*" name="postImage" placeholder=" MRI Post">
                <span asp-validation-for="PostPath" class="text-danger"></span>


            </div>

            <button type="submit" class="btn btn-primary mt-3">Post</button>
            <a asp-action="Index" asp-controller="Staff" class="btn btn-success ml-3 mt-3">Back</a>
        </form>
    </div>
</div>
